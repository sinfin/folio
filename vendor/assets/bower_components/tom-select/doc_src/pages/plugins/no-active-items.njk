{% from "demo.njk" import demo %}


{% set label %}
<label class="h2 mb-3">
	Example
</label>
<p>
	Prevents users from selecting items (eg selected options).
	Normally, users can active items by either clicking on them, shift+clicking, shift+left-arrow.
	This plugin disables that functionality.
</p>
{% endset %}


{% set html %}
<input type="text" id="ex-no-active-items" value="awesome,neat" autocomplete="off">
{% endset %}

<script>
{% set script %}
new TomSelect('#ex-no-active-items',{
	plugins: ['no_active_items'],
	persist: false,
	create: true,
});
{% endset %}
</script>


{{ demo( label, html, script) }}


