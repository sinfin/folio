{
	"include": ["../src/**/*"],
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"target": "ES6",
		"module": "esnext",
		"noUnusedLocals": true,
		"alwaysStrict": true,
	    "strictNullChecks": true,
	    "noImplicitReturns": true,
	    "noUnusedLocals": true,
	    "allowUnreachableCode": false,
	    "noUncheckedIndexedAccess": true,

		"lib": [
	      "ESNext",
	      "dom"
	    ],

		"declaration": true,
		"declarationDir": "../dist/types",
		"isolatedModules": true,
		"moduleResolution": "node"
	},
}
