# frozen_string_literal: true

require "test_helper"

class <%= application_namespace %>::Ui::ModalCellTest < Cell::TestCase
  test "show" do
    model = {
      class: "foo",
      body: "bar"
    }

    html = cell("<%= application_namespace_path %>/ui/modal", model).(:show)
    assert html.has_css?(".<%= classname_prefix %>-ui-modal")
    assert html.has_css?(".foo")
    assert_equal "bar", html.text
  end
end
