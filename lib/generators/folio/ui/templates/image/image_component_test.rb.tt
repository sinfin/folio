# frozen_string_literal: true

require "test_helper"

class <%= application_namespace %>::Ui::ImageComponentTest < Folio::ComponentTest
  def test_render
    render_inline(<%= application_namespace %>::Ui::ImageComponent.new(placement: create(:folio_file_placement_cover),
                                                size: "100x100"))

    assert_selector(".<%= classname_prefix %>-ui-image")

    render_inline(<%= application_namespace %>::Ui::ImageComponent.new(placement: create(:folio_file_placement_cover),
                                                size: "100x100",
                                                spacer_background: false))

    assert_selector(".<%= classname_prefix %>-ui-image")
  end
end
