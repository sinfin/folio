= font-size-base
  font-size: $font-size-base
  line-height: $line-height-base
  letter-spacing: normal

  @if $font-size-base != $font-size-base-mobile
    +media-breakpoint-down($font-size-media-breakpoint)
      font-size: $font-size-base-mobile

