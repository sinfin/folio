= line-clamp($lines)
  display: -webkit-box
  -webkit-box-orient: vertical
  -webkit-line-clamp: $lines
  overflow: hidden
  text-overflow: ellipsis
  max-height: $lines * $font-size-base * $line-height-base

  &.small,
  &.font-size-sm
    max-height: $lines * $font-size-sm * $line-height-sm

  &.large,
  &.font-size-lg
    max-height: $lines * $font-size-lg * $line-height-lg
