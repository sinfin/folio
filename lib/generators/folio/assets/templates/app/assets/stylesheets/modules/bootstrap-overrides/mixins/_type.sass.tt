= font-h1
  +font-size-display-xl
  font-weight: $font-weight-bold

  +media-breakpoint-down($font-size-media-breakpoint-m)
    +font-size-display-m

  +media-breakpoint-down($font-size-media-breakpoint-s)
    +font-size-display-s

= font-h2
  +font-size-display-m
  font-weight: $font-weight-bold

  +media-breakpoint-down($font-size-media-breakpoint-m)
    +font-size-display-s

  +media-breakpoint-down($font-size-media-breakpoint-s)
    +font-size-display-xs

= font-h3
  +font-size-display-s
  font-weight: $font-weight-bold

  +media-breakpoint-down($font-size-media-breakpoint-m)
    +font-size-display-xs

  +media-breakpoint-down($font-size-media-breakpoint-s)
    +font-size-display-2xs

= font-h4
  +font-size-display-xs
  font-weight: $font-weight-bold

  +media-breakpoint-down($font-size-media-breakpoint-m)
    +font-size-display-2xs

  +media-breakpoint-down($font-size-media-breakpoint-s)
    +font-size-display-3xs

= font-h5
  +font-h4

= font-size-base
  +font-size-text-m
  letter-spacing: normal

  // +media-breakpoint-down($font-size-media-breakpoint-m)
  //   +font-size-text-m

  +media-breakpoint-down($font-size-media-breakpoint-s)
    +font-size-text-s

= font-size-mini
  +font-size-text-xs
  letter-spacing: normal

  // +media-breakpoint-down($font-size-media-breakpoint-m)
  //   +font-size-text-xs

  // +media-breakpoint-down($font-size-media-breakpoint-s)
  //   +font-size-text-xs

= font-size-sm
  +font-size-text-s
  letter-spacing: normal

  // +media-breakpoint-down($font-size-media-breakpoint-m)
  //   +font-size-text-s

  +media-breakpoint-down($font-size-media-breakpoint-s)
    +font-size-text-xs

= font-size-lg
  +font-size-text-l
  letter-spacing: normal

  // +media-breakpoint-down($font-size-media-breakpoint-m)
  //   +font-size-text-l

  +media-breakpoint-down($font-size-media-breakpoint-s)
    +font-size-text-m

= line-clamp($lines)
  display: -webkit-box
  -webkit-box-orient: vertical
  -webkit-line-clamp: $lines
  overflow: hidden
  text-overflow: ellipsis
  max-height: $lines * $font-size-base * $line-height-base

  &.small,
  &.font-size-sm
    max-height: $lines * $font-size-sm * $line-height-sm

  &.large,
  &.font-size-lg
    max-height: $lines * $font-size-lg * $line-height-lg
