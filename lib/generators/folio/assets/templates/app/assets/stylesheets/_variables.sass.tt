$border-radius-sm: $grid-gutter-base

$modal-md: px-to-rem(640px)
$modal-inner-padding: px-to-rem(30px)
$modal-header-padding-y: px-to-rem(20px)

$input-btn-focus-width: 0

$btn-opacity: 1
$btn-hover-opacity: 0.85
$btn-disabled-opacity: 0.5
