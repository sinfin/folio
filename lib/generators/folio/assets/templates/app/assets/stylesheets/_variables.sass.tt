$ui-typo-text-xs-font-size: px-to-rem(12px)
$ui-typo-text-xs-line-height: $ui-typo-text-line-height

$link-color: inherit
$link-decoration: underline
$link-hover-color: inherit
$link-hover-decoration: none

$headings-font-weight: $font-weight-bold
$headings-margin-top: $spacer / 2
$headings-margin-bottom: $spacer
$headings-margin-top-mobile: $headings-margin-top
$headings-margin-bottom-mobile: $headings-margin-bottom

