$h0-margin-bottom-mobile: $h0-margin-bottom

$h1-font-size: $ui-typo-display-xl-font-size
$h1-line-height: $ui-typo-display-xl-line-height
$h1-letter-spacing: $ui-typo-display-xl-letter-spacing
$h1-margin-top: 0
$h1-margin-bottom: $spacer
$h1-font-size-mobile: $h1-font-size
