$enable-negative-margins: true
$enable-rfs: false
$enable-validation-icons: false

$grid-gutter-base: px-to-rem(8px)
$grid-gutter-width: 4 * $grid-gutter-base
$grid-gutter-half: $grid-gutter-width / 2

$spacer: $grid-gutter-half
$spacers: ( 0: 0, 1: $spacer * .25, 2: $spacer * .5, 3: $spacer, 4: $spacer * 1.5, 5: $spacer * 3, h: $grid-gutter-half, g: $grid-gutter-width, gg: 2 * $grid-gutter-width, 40: px-to-rem(40px) )

$white: #FFFFFF
$black: #000000
$dark-gray: #3B4548
$gray-medium-dark: #6F7172
$gray: #C9CBCC
$light-gray: #F5F5F5
$medium-gray: #E8E8E8
$blue: #4C84FD
$orange: #FF9A52
$green: #219D61
$yellow: #F1CA45
$red: #F0655D
$violet: #5D2382
$copper: #C1852C
$gold: #D3AF51
$antracite: #212529

$gray-100: #f8f9fa
$gray-600: #6c757d
$gray-900: $antracite

$cyan: #0dcaf0 !default

$primary: $black
$secondary: $gray-600
$tertiary: $medium-gray
$success: $green !default
$info: $blue !default
$warning: $yellow !default
$danger: $red !default
$light: $gray-100 !default
$dark: $gray-900 !default

$shade-200: #E8E8E8
$shade-300: #555555
$shade-500: #8D8D8D

$container-fluid-max-width: 1440px
$font-size-media-breakpoint: lg

$font-family-sans-serif: "IBM Plex Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"

$font-weight-lighter: lighter
$font-weight-light: 300
$font-weight-normal: 400
$font-weight-medium: 500
$font-weight-semibold: 600
$font-weight-bold: 700
$font-weight-bolder: bolder

$ui-typo-display-line-height: 1.2

$ui-typo-display-2xl-font-size: px-to-rem(64px)
$ui-typo-display-2xl-line-height: $ui-typo-display-line-height
$ui-typo-display-2xl-letter-spacing: -2px

$ui-typo-display-xl-font-size: px-to-rem(56px)
$ui-typo-display-xl-line-height: $ui-typo-display-line-height
$ui-typo-display-xl-letter-spacing: -2px

$ui-typo-display-l-font-size: px-to-rem(48px)
$ui-typo-display-l-line-height: $ui-typo-display-line-height
$ui-typo-display-l-letter-spacing: -2px

$ui-typo-display-m-font-size: px-to-rem(36px)
$ui-typo-display-m-line-height: $ui-typo-display-line-height
$ui-typo-display-m-letter-spacing: -2px

$ui-typo-display-s-font-size: px-to-rem(24px)
$ui-typo-display-s-line-height: $ui-typo-display-line-height
$ui-typo-display-s-letter-spacing: normal

$ui-typo-display-xs-font-size: px-to-rem(18px)
