.<%= classname_prefix %>-atom-images-grid-gallery
  --<%= classname_prefix %>-atom-images-grid-gallery-spacer: #{$grid-gutter-width}

  &__row
    --bs-gutter-x: var(--<%= classname_prefix %>-atom-images-grid-gallery-spacer)
    row-gap: var(--<%= classname_prefix %>-atom-images-grid-gallery-spacer)

  &__caption
    margin-top: var(--<%= classname_prefix %>-atom-images-grid-gallery-spacer)

  &__title:not(:last-child)
    display: inline-block
    margin-right: $grid-gutter-half

  &__subtitle
    color: $shade-400

  +media-breakpoint-down(sm)
    --<%= classname_prefix %>-atom-images-grid-gallery-spacer: #{2 * $grid-gutter-base}
