- if @pagy && @pagy.try(:pages) && @pagy.pages > 1
  .d-ui-pagy
    nav.d-ui-pagy__nav role="navigation" aria-label="pager"
      ul.d-ui-pagy__pages
        - if @pagy.prev
          li.d-ui-pagy__page[
            class="d-ui-pagy__page--with-ico"
            class="d-ui-pagy__page--first"
            class="d-ui-pagy__page--hide-on-mobile"
          ]
            == link.call(1,
                        dummy_ui_icon(:arrow_left_from_line),
                        'aria-label="first" class="d-ui-pagy__page-link"')

          li.d-ui-pagy__page[
            class="d-ui-pagy__page--with-ico"
            class="d-ui-pagy__page--prev"
          ]
            == link.call(@pagy.prev,
                        dummy_ui_icon(:arrow_left),
                      'aria-label="previous" class="d-ui-pagy__page-link"')
        - else
          li.d-ui-pagy__page[
            class="d-ui-pagy__page--with-ico"
            class="d-ui-pagy__page--first"
            class="d-ui-pagy__page--hide-on-mobile"
            class="d-ui-pagy__page--disabled"
          ]
            span.d-ui-pagy__page-item
              = dummy_ui_icon(:arrow_left_from_line)

          li.d-ui-pagy__page[
            class="d-ui-pagy__page--with-ico"
            class="d-ui-pagy__page--prev"
            class="d-ui-pagy__page--disabled"
          ]
            span.d-ui-pagy__page-item
              = dummy_ui_icon(:arrow_left)

        / list of page numbers
        - series_as_hashes.each do |h|
          li.d-ui-pagy__page class=h[:class_name]
            - if h[:link]
              == h[:link]
            - else
              span.d-ui-pagy__page-item
                == h[:label]

        - if @pagy.next
          li.d-ui-pagy__page[
            class="d-ui-pagy__page--with-ico"
            class="d-ui-pagy__page--next"
          ]
            == link.call(@pagy.next,
                        dummy_ui_icon(:arrow_right),
                        'aria-label="next" class="d-ui-pagy__page-link"')

          li.d-ui-pagy__page[
            class="d-ui-pagy__page--with-ico"
            class="d-ui-pagy__page--last"
            class="d-ui-pagy__page--hide-on-mobile"
          ]
            == link.call(@pagy.last,
                        dummy_ui_icon(:arrow_right_to_line),
                        'aria-label="last" class="d-ui-pagy__page-link"')

        - else
          li.d-ui-pagy__page[
            class="d-ui-pagy__page--with-ico"
            class="d-ui-pagy__page--next"
            class="d-ui-pagy__page--disabled"
          ]
            span.d-ui-pagy__page-item
              = dummy_ui_icon(:arrow_right)

          li.d-ui-pagy__page[
            class="d-ui-pagy__page--with-ico"
            class="d-ui-pagy__page--last"
            class="d-ui-pagy__page--hide-on-mobile"
            class="d-ui-pagy__page--disabled"
          ]
            span.d-ui-pagy__page-item
              = dummy_ui_icon(:arrow_right_to_line)
