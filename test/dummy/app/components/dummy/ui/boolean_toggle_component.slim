label.d-ui-boolean-toggle data=data class=@class_name
  input.d-ui-boolean-toggle__input[
    type="checkbox"
    checked=checked
    name=name
    data=stimulus_action('onInput')
    disabled=@disabled
  ]

  .d-ui-boolean-toggle__label[
    class=(@small_label ? "small" : nil)
  ]
    - if @label
      - if @verbose
        span[
          class="d-ui-boolean-toggle__label-text"
          class="d-ui-boolean-toggle__label-text--on"
        ]
          = verbose_label(true)
        span[
          class="d-ui-boolean-toggle__label-text"
          class="d-ui-boolean-toggle__label-text--off"
        ]
          = verbose_label(false)
      - else
        span[
          class="d-ui-boolean-toggle__label-text"
        ]
          = label_string
