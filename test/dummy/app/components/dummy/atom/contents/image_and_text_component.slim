.d-atom.my-atom[
  class=bem_class_name
  data=data
]
  .container-fluid[
    class=(@wrapper ? "container-fluid--with-narrow" : nil)
  ]
    .d-atom-contents-image-and-text__inner[
      class="d-ui-image-hover-zoom-wrap"
    ]
      .d-atom-contents-image-and-text__row[
        class=(@wrapper ? inner_narrow_container_class : nil)
      ]
        .d-atom-contents-image-and-text__image-wrap
          = dummy_ui_image(atom_cover_placement,
                           @thumb_size,
                           class_name: "d-atom-contents-image-and-text__image",
                           lightbox: true,
                           hover_zoom: @with_link)

        .d-atom-contents-image-and-text__contents
          - if @atom.subtitle.present?
            .d-atom-contents-image-and-text__subtitle.fs-text-l
              = @atom.subtitle

          - if @atom.title.present?
            h2.d-atom-contents-image-and-text__title.fs-display-s
              = @atom.title

          - if @atom.content.present?
            .d-atom-contents-image-and-text__text[
              class="d-rich-text"
            ]
              == cstypo @atom.content

          - if @with_link
            a.d-atom-contents-image-and-text__btn[
              class="btn btn-secondary btn-sm"
              href=@atom.url_json[:href]
              target=@atom.url_json[:target]
              rel=@atom.url_json[:rel]
            ]
              = @atom.button_label
