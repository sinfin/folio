= render_folio_cache
  .container-fluid
    h1 = cstypo @topic.title

    - if @topic.perex.present?
      .lead.mb-4 == cstypo simple_format @topic.perex

    / TODO: add a custom content as in figma
    / = render_atoms_in_molecules(@topic.atoms_in_molecules)
    .mt-4
      - if @articles.present?
        = render(Dummy::Blog::Articles::CardsComponent.new( \
                 size: :md,
                 hero_size: :lg,
                 container_classes: "mt-sm-2",
                 column_classes: "col-12 col-sm-6 col-lg-4",
                 articles: @articles))

      - if @pagy.present?
        = render(Dummy::Ui::PagyComponent.new(pagy: @pagy))
