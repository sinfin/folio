= index_header

= render partial: "folio/console/users/index_top"

= catalogue(@users)
  ruby:
    id
    show_link(:to_label, sanitize: true)
    email(sanitize: true)
    date(:last_sign_in_at, small: true)
    attribute(:sign_in_count)

    toggle(:locked)

    if record.respond_to?(:aasm_state)
      state
    end

    actions :show, :edit, :destroy
