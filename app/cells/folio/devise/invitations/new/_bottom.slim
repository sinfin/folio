.f-devise__fieldset-wrap
  = @f.input :terms_agreement,
             label: terms_agreement_label.html_safe,
             as: :boolean,
             required: true,
             wrapper_html: { class: 'f-devise__fieldset' },
             input_html: { \
               id: "user_terms_agreement_#{SecureRandom.hex(4)}", \
               data: { \
                 f_devise_invitations_new_target: 'termsAgreement', \
                 action: 'change->f-devise-invitations-new#onAgreementChange' \
               } \
             }

  = @f.input :age_agreement,
             label: t('.age_agreement'),
             as: :boolean,
             required: true,
             wrapper_html: { class: 'f-devise__fieldset' },
             input_html: { \
               id: "user_age_agreement_#{SecureRandom.hex(4)}", \
               data: { \
                 f_devise_invitations_new_target: 'ageAgreement', \
                 action: 'change->f-devise-invitations-new#onAgreementChange' \
               } \
             }
