javascript:
  function rgb2hex(rgb) {
    rgb = rgb.match(/^rgb\((\d+),\s*(\d+),\s*(\d+)\)$/);
    function hex(x) {
      return ("0" + parseInt(x).toString(16)).slice(-2);
    }
    return "#" + hex(rgb[1]) + hex(rgb[2]) + hex(rgb[3]);
  }

  [].forEach.call(document.querySelectorAll('.f-ui__typo-item.mb-3'), function (el) {
    var style = window.getComputedStyle(el.children[0])
    var line = [
      style['font-family'].split(',')[0].replace(/"/g, ''),
      style['font-weight'],
      style['font-size'].replace('px', '') + '/' + style['line-height'].replace('px', '') + 'px',
      rgb2hex(style['color'])
    ].join(', ')
    var div = document.createElement('div')
    div.classList.add('text-muted')
    div.classList.add('small')
    div.classList.add('mt-1')
    div.innerText = line
    el.appendChild(div)
  });

- if @mobile_only
  javascript:
    document.body.innerHTML = document.querySelector('.f-ui__typo').outerHTML
    document.documentElement.style.overflow = 'auto'

    document.addEventListener('DOMContentLoaded', function () {
      document.body.innerHTML = document.querySelector('.f-ui__typo').outerHTML
      document.documentElement.style.overflow = 'auto'
    })
