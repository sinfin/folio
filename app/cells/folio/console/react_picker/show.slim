.form-group[
  class=class_name
  data-alt-prompt=t('folio.console.alt_prompt')
  data-file-title-prompt=t('folio.console.file_title_prompt')
]
  label.folio-console-react-picker__label
    = title

  .folio-console-react-picker__files[
    data-placement-key=placement_key
    data-placement-type=placement_type
    data-cocoon-single-nested=single?
    class=(picked? ? 'folio-console-has-nested': nil)
  ]
    = render_fields

  .folio-console-react-picker__button
    button.btn[
      type="button"
      class="folio-console-add-#{file_type_slug}"
      class=(single? ? 'btn-success' : 'btn-secondary')
    ]
      - if single?
        = t('.add')
      - else
        - if options[:file_type] == 'Folio::Document'
          = t('folio.console.documents_management')
        - else
          = t('folio.console.gallery_management')

  - if form_errors
    .folio-console-react-picker__errors
      small.form-text == form_errors.join(' <br> ')
