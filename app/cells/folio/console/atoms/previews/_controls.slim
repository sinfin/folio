- unless options[:non_interactive]
  - I18n.with_locale(::Rails.application.config.folio_console_locale)
    .f-c-atoms-previews__controls
      .f-c-atoms-previews__controls-overlay
      .f-c-atoms-previews__buttons
        button[
          type="button"
          class="f-c-atoms-previews__button"
          class="f-c-atoms-previews__button--secondary"
          class="f-c-atoms-previews__button--edit"
        ]
          = folio_icon(:edit, height: 16)

        button[
          type="button"
          class="f-c-atoms-previews__button"
          class="f-c-atoms-previews__button--arrow"
          class="f-c-atoms-previews__button--arrow-up"
        ]
          = folio_icon(:arrow_up, height: 16)

        button[
          type="button"
          class="f-c-atoms-previews__button"
          class="f-c-atoms-previews__button--arrow"
          class="f-c-atoms-previews__button--arrow-down"
        ]
          = folio_icon(:arrow_down, height: 16)

        span[
          class="f-c-atoms-previews__button"
          class="f-c-atoms-previews__button--handle"
        ]
          = folio_icon(:arrow_up_down, height: 16)

        button[
          type="button"
          class="f-c-atoms-previews__button"
          class="f-c-atoms-previews__button--danger"
          class="f-c-atoms-previews__button--remove"
        ]
          = folio_icon(:delete, height: 16)

      .f-c-atoms-previews__controls-mobile-overlay
