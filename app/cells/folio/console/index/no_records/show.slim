.f-c-index-no-records
  - if filtered? || controller.params[:by_label_query].present?
    p: strong = t('.filtered')
  - else
    .card.card--medium-gray
      .card-body
        h3.card-text.mt-0 = t('.none')

        .d-flex.align-items-center.gap-h
          - unless model[:new_button] == false
            == cell('folio/console/index/new_button', model)

            - if model[:create_defaults_path]
              span.f-c-index-no-records__or = t('.or')

          - if model[:create_defaults_path]
            = simple_form_for "", method: :post, url: model[:create_defaults_path] do |f|
              = render_view_component(Folio::Console::Ui::ButtonComponent.new(type: :submit,
                                                                              icon: :star,
                                                                              label: t('.create_defaults')))
