- if f.object.id
  button[
    type="button"
    class=destroy_button_class_name
  ]
    = destroy_label
  = f.hidden_field :_destroy,
                   value: 0,
                   class: 'f-c-nested-model-controls__destroy-input'

- else
  = link_to_remove_association(destroy_label, \
                               f, \
                               class: destroy_button_class_name)
