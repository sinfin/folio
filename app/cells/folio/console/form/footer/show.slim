.f-c-form-footer-spacer
.f-c-form-footer
  .container-fluid.f-c-form-footer__container
    - if back_path
      == cell('folio/console/ui/button',
              href: back_path,
              class: 'f-c-form-footer__btn',
              variant: :gray,
              label: t('folio.console.actions.back'),
              hide_label_on_mobile: true,
              icon: :arrow_u_left_top,
              data: { test_id: "back-button" })

    - if preview_path
      == cell('folio/console/ui/button',
              href: preview_path,
              class: 'f-c-form-footer__btn',
              variant: :gray,
              label: t('folio.console.actions.preview'),
              hide_label_on_mobile: true,
              icon: :open_in_new,
              target: "_blank",
              data: { test_id: "preview-button" })

    = options[:pre_submit_content]

    - if model
      == cell('folio/console/ui/button',
              type: :submit,
              class: 'f-c-form-footer__btn f-c-form-footer__btn--submit',
              variant: :primary,
              label: submit_label,
              icon: :check,
              data: { test_id: "submit-button" })

    == cell('folio/console/ui/warning_ribbon',
            t('.dirty_forms'),
            class: "f-c-form-footer__ribbon")

    = options[:post_submit_content]
