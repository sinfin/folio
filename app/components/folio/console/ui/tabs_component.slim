div class=bem_class_name data=data
  .f-c-ui-tabs__inner
    ul.f-c-ui-tabs__nav[
      class="nav nav-tabs"
      class="f-c-anti-container-fluid"
      class="f-c-anti-container-fluid--padded"
    ]
      - @tabs.each do |tab|
        li.f-c-ui-tabs__nav-item[
          class="nav-item"
          hidden=tab[:hidden]
          data-key=tab[:key]
        ]
          *link_tag(tab)
            - if tab[:icon]
              = folio_icon(tab[:icon],
                           height: 16,
                           class_name: "f-c-ui-tabs__icon")

            = tab[:label]

            - if tab[:count]
              span.f-c-ui-tabs__count[
                class=count_class_name(tab[:color])
                data-count=tab[:count]
              ]

  - if content?
    .tab-content
      == content
